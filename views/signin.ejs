<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('./partials/head', {title : 'Sign In'}) %>
  </head>
  <body>
    <%- include ('./partials/script') %>
    <% if (locals.error) { %>
        <div class="alert-container">
            <div class="alert alert-danger" role="alert">
                <%= locals.error %>
            </div>
        </div>
    <% } %>
    <div class="container mx-50" >
        <form action="/user/signin" method="post">

            <div class="my-3">
                <label
                    for="email"
                    class="form-label">
                        Email address
                </label>
                <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    aria-describedby="emailHelp"
                />
            </div>

            <div class="mb-3">
                <label
                    for="password"
                    class="form-label">
                        Password
                </label>
                <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                />
            </div>

            <button type="submit" class="btn btn-primary">
                Sign In
            </button>

        </form>
    </div>
  </body>
</html>
